
{% set imageUrl = file_url(paragraph.field_image.entity.field_media_image.entity.fileuri) %}

  <div class="card-item">
    <a href={{content.field_card_link.0['#title'] }} alt="Card Link">
      <div class="card-img">
        <img src={{imageUrl}} class="img-fluid" alt="Decorative image">
      </div>
      <div class="card-info">
        <h3>{{ content.field_heading }}</h3>
        {{ content.field_summary }}
      </div>
    </a>
  </div>
